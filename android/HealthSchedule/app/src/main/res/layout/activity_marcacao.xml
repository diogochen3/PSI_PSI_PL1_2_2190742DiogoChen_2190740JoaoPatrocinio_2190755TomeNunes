<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MarcacaoActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="Marcação"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="97dp" />

        <TextView
            android:id="@+id/tvEspecialidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="especialidade"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="97dp" />
        <TextView
            android:id="@+id/tvMedico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="medico"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="97dp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Especialidade" />

        <Spinner
        android:id="@+id/spEspecialidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medico" />

        <Spinner
        android:id="@+id/spMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tempo" />

        <Spinner
            android:id="@+id/spHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp"
        android:backgroundTint="#E91E63"
        android:clickable="true"
        android:src="@drawable/ic_action_adicionar" />
</FrameLayout>
